-- vim: ft=cantilever

: basez  ( zstr base -- int addr? )
	-- parse the leading numeric portion of zstr in specified base
	-- if the whole string is consumed then addr? is zero, else 
	-- addr of first unparsed char.
	push 
	dup @b digit
	dup 0 peek between? not if 
		swap return
	endif
;


